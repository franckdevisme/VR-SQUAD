{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}

    <div class="container">
        <section>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-capitalize text-center">
                <h1> {{ formation.nomformation }} </h1>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt1">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        {% for key, image in formation.ContenuImg %}
                            <li data-target="#myCarousel" data-slide-to="{{ key }}" class=" {% if key == 0  %}  active {% endif %}"></li>
                        {% endfor %}
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        {% for key, image in formation.ContenuImg %}
                            <div class="item  {% if key == 0  %}  active {% endif %}">
                                <img src="{{ image.UrlImage }}" alt="formation">
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="col-md-12 text-center">

                    {% for key, text in  formation.Contenutext %}
                        <h3 class="text-capitalize">{{ text.titre }}  </h3>
                        <br>
                        <p class="text-justify">{{ text.text }}</p>
                    {% endfor %}

                </div>


            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

                <div class="col-md-2 col-md-offset-3">
                <a class="btn btn-primary btn-lg" href="{{ path('formation_index') }}">back to list</a>
                </div>
                <div class="col-md-2">
                <a class="btn btn-primary btn-lg" href="{{ path('formation_edit', {'idformation': formation.idformation}) }}">Modification</a>
                </div>
                <div class="col-md-2 ">
                {{ include('formation/_delete_form.html.twig') }}
                </div>
            </div>
        </section>


    </div>


{% endblock %}
