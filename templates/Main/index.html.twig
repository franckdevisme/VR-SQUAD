{% extends 'base.html.twig' %}
{% block body %}
    <div class="container clearfix">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
    {% for key, formation in formations %}


        {% endfor %}
        </div>

        <section id="inscription" class="bg-grey clr p0">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {% for key, formation in formations %}
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center" style="min-height: 380px;">
                    <div class="col-md-12 text-center">
                        {% for key, img in (formation.contenuImg) %}
                            {% if key == 0 %}
                            <img class="img-responsive" src="{{img.urlImage }}">
                                {% endif %}
                        {% endfor %}
                            <br>
                                <h4 class="text-capitalize"> {{ formation.nomformation }} </h4>
                                <p class="text-justify"> {{ formation.description }}   <a href="/formation/{{ formation.idformation }}" > En savoir plus </a></p>
                    </div>
                        <div class="col-md-12">
                            <a class="btn btn-primary col-md-4 col-md-offset-1" href="{{ path('formation_show', {'idformation': formation.idformation}) }}">show</a>
                            <a class="btn btn-primary col-md-4 col-md-offset-2 " href="{{ path('formation_edit', {'idformation': formation.idformation}) }}">edit</a>
                        </div>
                    </div>

                {% endfor %}

                </div>
        </section>
    </div>
{% endblock %}