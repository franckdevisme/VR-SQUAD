{% trans_default_domain 'FOSUserBundle' %}



    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center mt1 mb5" style="min-height: 90px;">
        <h1>Bienvenue  <span> sur VR-SQUAD</span></h1>
    </div>

    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 mb5 bg-white">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center mb2">
            <h3 >Vous n'avez pas de compte ?
                <br><span>Inscrivez-vous en complétant le formulaire ci dessous</span> </h3>
        </div>

        <div class="col-lg-10 col-md-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="form-group">
            {{ form_label(form.nom, 'Nom :', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group">
        {{ form_label(form.prenom, 'Prénom :', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.poste, 'Fonction  :', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.poste) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email,'Adress email:', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
        {{ form_label(form.username, 'Nom d\'utilisateur :', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'Mot de passe:', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Répéter le mot de passe :', {'label_attr': {'class': 'label'}}) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    <div class="text-center ">
        <input type="submit" class="btn btn-primary btn-lg" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
    </div>
    </div>






